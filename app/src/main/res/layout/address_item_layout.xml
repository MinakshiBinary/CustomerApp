<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@+id/chk_Default"
        android:background="@color/white"
        android:orientation="vertical">

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:id="@+id/tv_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jithin Manomohan"
            android:textAllCaps="true"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:id="@+id/tv_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:text="\#A2 Mapple, Regency Pinnacle Heights, \nThanisandra, Bengaluru, \nKarnataka, India"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_13" />

        <LinearLayout
            android:id="@+id/ll_Pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_Address"
            android:layout_marginTop="4.0dip"
            android:orientation="horizontal">

            <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode: "
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_13" />

            <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                android:id="@+id/tv_Pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:text="560045"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_13"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_MobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_Pincode"
            android:layout_marginTop="4.0dip"
            android:orientation="horizontal">

            <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number: "
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_13" />

            <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                android:id="@+id/tv_ContactNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:singleLine="true"
                android:text="956705112"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_13"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/chk_Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:padding="4.0dip" />

    <LinearLayout
        android:id="@+id/ll_Remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_Edit"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8.0dip">

        <ImageView
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chk_Default"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8.0dip">

        <ImageView
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:src="@drawable/ic_mode_edit_black_24px" />
    </LinearLayout>

    <include
        layout="@layout/divider_horzontal_full"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_Address"
        android:layout_marginTop="8dp"></include>
</RelativeLayout>