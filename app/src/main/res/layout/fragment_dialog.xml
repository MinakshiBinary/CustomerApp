<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/verylightGrey"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_BtnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16.0dip"
        android:src="@drawable/ic_close"
        android:visibility="gone" />

    <com.binaryic.customerapp.fashionic.custom.TextViewSecondary
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginTop="16.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="Title"
        android:textAllCaps="true"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_16"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16.0dip"
        android:gravity="center"
        android:minHeight="80.0dip"
        android:orientation="vertical">

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="Title"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/activity_18sp_margin"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56.0dip"
        android:layout_gravity="center"
        android:gravity="right"
        android:orientation="horizontal">

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="Cancel"
            android:textAllCaps="true"
            android:textColor="@color/red_dark"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:id="@+id/btnDone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_blue_rounded"
            android:gravity="center"
            android:text="DONE"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>