<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16.0dip">

    <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
        android:id="@+id/tv_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jithin Manomohan"
        android:textAllCaps="true"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />

    <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
        android:id="@+id/tv_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text="\#A2 Mapple, Regency Pinnacle Heights, \nThanisandra, Bengaluru, \nKarnataka, India"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/text_13" />

    <LinearLayout
        android:id="@+id/ll_Pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Address"
        android:layout_marginTop="8.0dip"
        android:orientation="horizontal">

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pincode: "
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_13" />

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:id="@+id/tv_Pincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:text="560045"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_13"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_MobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_Pincode"
        android:layout_marginTop="8.0dip"
        android:orientation="horizontal">

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number: "
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_13" />

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:id="@+id/tv_ContactNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:text="9567051123"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_13"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>