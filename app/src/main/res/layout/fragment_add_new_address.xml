<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cd_Save"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/margin8dp"
                        android:layout_marginTop="@dimen/activity_10dp_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border"
                        android:padding="4.0dip">

                        <EditText
                            android:id="@+id/et_FirstName"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@color/colorWhite"
                            android:hint="First Name"
                            android:maxLength="20"
                            android:inputType="textPersonName"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_16" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="@dimen/margin8dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_10dp_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border"
                        android:padding="4.0dip">

                        <EditText
                            android:id="@+id/et_LastName"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:background="@color/colorWhite"
                            android:hint="Last Name"
                            android:inputType="textPersonName"

                            android:maxLength="20"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_16" />
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_10dp_margin"
                    android:background="@drawable/rounded_border"
                    android:padding="4.0dip">

                    <EditText
                        android:id="@+id/et_Address"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorWhite"
                        android:hint="Address"
                        android:inputType="textPostalAddress"

                        android:maxLength="255"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10.0dip"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_16" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/margin8dp"
                        android:layout_marginTop="@dimen/activity_10dp_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border"
                        android:padding="4.0dip">

                        <EditText
                            android:id="@+id/et_Pincode"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:background="@color/colorWhite"
                            android:hint="Pincode"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_16" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="@dimen/margin8dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_10dp_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border"
                        android:padding="4.0dip">

                        <EditText
                            android:id="@+id/et_MobileNumber"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:background="@color/colorWhite"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_16" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/margin8dp"
                        android:layout_marginTop="@dimen/activity_10dp_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border"
                        android:padding="4.0dip">

                        <EditText
                            android:id="@+id/et_Landmark"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:background="@color/colorWhite"
                            android:hint="Landmark"
                            android:inputType="text"

                            android:maxLength="20"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_16" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="@dimen/margin8dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_10dp_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border"
                        android:padding="4.0dip">

                        <EditText
                            android:id="@+id/et_Area"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/colorWhite"
                            android:hint="Area"
                            android:inputType="text"

                            android:maxLength="20"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_16" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/margin8dp"
                        android:layout_marginTop="@dimen/activity_10dp_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border"
                        android:padding="4.0dip">

                        <EditText
                            android:id="@+id/et_City"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@color/colorWhite"
                            android:hint="City"
                            android:inputType="text"
                            android:maxLength="20"

                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_16" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="@dimen/margin8dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_10dp_margin"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_border"
                        android:padding="4.0dip">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_State"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:hint="State"
                            android:maxLength="20"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"

                            android:singleLine="true"
                            android:textSize="@dimen/text_16" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cd_Save"
        android:layout_width="match_parent"
        android:layout_height="56.0dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        custom:cardBackgroundColor="@color/shop_Organic_Color"
        custom:cardCornerRadius="2.0dip">

        <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="SAVE"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
</RelativeLayout>