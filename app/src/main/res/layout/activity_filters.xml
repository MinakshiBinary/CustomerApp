<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/RLtopbar"
        layout="@layout/toolbar_centered" />

    <LinearLayout
        android:id="@+id/LLrecyclerView"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.35"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btnSort"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/red_dark"
                android:gravity="center"
                android:orientation="horizontal">

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/lblSort"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="16.0dip"
                    android:text="Sort"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tvSortCount"
                    android:layout_width="20dp"
                    android:layout_height="20.0dip"
                    android:layout_margin="8.0dip"
                    android:background="@drawable/rounded_gold"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_SalesPrice"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_SalesPrice"
                    android:layout_width="0.0dip"
                    android:layout_height="48.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="16.0dip"
                    android:text="Sales Price"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_SalesPriceCount"
                    android:layout_width="20dp"
                    android:layout_height="20.0dip"
                    android:layout_margin="8.0dip"
                    android:background="@drawable/rounded_gold"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_DeliveryCharges"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_DeliveryCharges"
                    android:layout_width="0.0dip"
                    android:layout_height="48.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="16.0dip"
                    android:text="Delivery Charges"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_DeliveryChargesCount"
                    android:layout_width="20dp"
                    android:layout_height="20.0dip"
                    android:layout_margin="8.0dip"
                    android:background="@drawable/rounded_gold"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_MRP"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_MRP"
                    android:layout_width="0.0dip"
                    android:layout_height="48.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="16.0dip"
                    android:text="MRP"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_MRPCount"
                    android:layout_width="20dp"
                    android:layout_height="20.0dip"
                    android:layout_margin="8.0dip"
                    android:background="@drawable/rounded_gold"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Size"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_Size"
                    android:layout_width="0.0dip"
                    android:layout_height="48.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="16.0dip"
                    android:text="Size"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_SizeCount"
                    android:layout_width="20dp"
                    android:layout_height="20.0dip"
                    android:layout_margin="8.0dip"
                    android:background="@drawable/rounded_gold"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Color"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_Color"
                    android:layout_width="0.0dip"
                    android:layout_height="48.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="16.0dip"
                    android:text="Color"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_ColorCount"
                    android:layout_width="20dp"
                    android:layout_height="20.0dip"
                    android:layout_margin="8.0dip"
                    android:background="@drawable/rounded_gold"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Category"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_Category"
                    android:layout_width="0.0dip"
                    android:layout_height="48.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="16.0dip"
                    android:text="Category"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_CategoryCount"
                    android:layout_width="20dp"
                    android:layout_height="20.0dip"
                    android:layout_margin="8.0dip"
                    android:background="@drawable/rounded_gold"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="16.0dip"
            android:layout_marginTop="16.0dip"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.65"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etFilterSearch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:hint="Search.."
                android:padding="16.0dip"
                android:textSize="@dimen/text_12"
                android:visibility="gone" />

            <View
                android:id="@+id/dividerSearch"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/divider" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerItems"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnClear"
            android:layout_width="0.0dip"
            android:layout_height="56.0dip"
            android:layout_weight="0.35"
            android:background="@color/black"
            android:padding="16.0dip"
            android:text="CLEAR"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnApply"
            android:layout_width="0.0dip"
            android:layout_height="56.0dip"
            android:layout_weight="0.65"
            android:background="@color/button_blue_color"

            android:padding="16.0dip"
            android:text="APPLY FILTER"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>