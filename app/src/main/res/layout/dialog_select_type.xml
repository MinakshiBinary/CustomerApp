<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/colorWhite"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin10dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/ll_Camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin10dp">

            <ImageView
                android:id="@+id/iv_Camera"
                android:layout_width="@dimen/margin50dp"
                android:layout_height="@dimen/margin50dp"
                android:src="@drawable/ic_camera_alt_black_24dp" />

            <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                android:textColor="@color/textSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Camera "
                android:textAllCaps="true"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin20dp"
            android:background="@color/view_drawer_color" />

        <LinearLayout
            android:id="@+id/ll_Gallary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin10dp">

            <ImageView
                android:id="@+id/iv_Gallary"
                android:layout_width="@dimen/margin50dp"
                android:layout_height="@dimen/margin50dp"
                android:src="@drawable/ic_insert_photo_black_24px" />

            <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallary"
                android:textColor="@color/textSecondary"
                android:textAllCaps="true"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>