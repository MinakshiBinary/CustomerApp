<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/ll_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/ll_Background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header"
            android:orientation="vertical"></ImageView>

        <LinearLayout
            android:layout_marginTop="80dp"
            android:id="@+id/ll_Logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/margin80dp"
                android:layout_height="@dimen/margin80dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/text"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_Submit"
        android:layout_below="@+id/ll_Header">

        <LinearLayout
            android:id="@+id/ll_MainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_Header"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <EditText
                    android:id="@+id/et_Phone_Number"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <EditText
                    android:id="@+id/et_First_Name"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:hint="First Name"
                    android:maxLength="20"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <EditText
                    android:id="@+id/et_Last_Name"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:hint="Last Name"
                    android:maxLength="20"

                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <EditText
                    android:id="@+id/et_EmailID"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <EditText
                    android:id="@+id/et_Address"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:hint="Address"
                    android:maxLength="255"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <EditText
                    android:id="@+id/et_Landmark"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:hint="Landmark"
                    android:maxLength="20"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <EditText
                    android:id="@+id/et_Area"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:hint="Area"
                    android:maxLength="20"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <EditText
                    android:id="@+id/et_Pincode"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:hint="Pincode"
                    android:maxLength="6"
                    android:inputType="number"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <EditText
                    android:id="@+id/et_City"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:hint="City"
                    android:maxLength="20"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_10dp_margin"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <AutoCompleteTextView
                    android:hint="State"
                    android:singleLine="true"
                    android:background="@color/white"
                    android:id="@+id/spinner_State"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"

                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin10dp"
                android:background="@drawable/rounded_border"
                android:padding="4.0dip">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_Category"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Category"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_16" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

    <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
        android:id="@+id/tv_Submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_border_blue"
        android:gravity="center"
        android:paddingBottom="@dimen/margin10dp"
        android:paddingLeft="@dimen/margin15dp"
        android:paddingRight="@dimen/margin15dp"
        android:paddingTop="@dimen/margin10dp"
        android:text="Sign UP"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_22" />
</RelativeLayout>