<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1.0dip"
    android:layout_marginLeft="0.5dip"
    android:layout_marginRight="0.5dip"
    android:background="@color/white">
    <com.binaryic.customerapp.fashionic.custom.ImageViewSquare
        android:id="@+id/imgProduct"
        android:layout_above="@+id/rl_Price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="4.0dip"
        android:padding="6.0dip">

        <ImageView
            android:id="@+id/imgfav"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:src="@drawable/logo" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_Price"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4.0dip">

            <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                android:id="@+id/tv_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:maxLines="3"
                android:minLines="2"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <LinearLayout

                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_5dp_margin"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="@dimen/activity_5dp_margin"
                android:layout_marginTop="@dimen/activity_5dp_margin"
                android:gravity="center|right">

                <com.binaryic.customerapp.fashionic.custom.TextViewRS
                    android:id="@+id/tvOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/activity_10dp_margin"
                    android:gravity="center"
                    android:text="Rs 900"
                    android:textColor="@color/textColorOldPrice"
                    android:textSize="@dimen/text_14"
                    android:visibility="gone" />

                <com.binaryic.customerapp.fashionic.custom.TextViewRS
                    android:id="@+id/tvSellingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:text="Rs. 1200"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />
            </LinearLayout>


            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_10dp_margin"
                android:layout_marginRight="@dimen/activity_10dp_margin">

                <TextView
                    android:id="@+id/tv_Plus"
                    android:layout_width="@dimen/activity_20dp_margin"
                    android:layout_height="@dimen/activity_20dp_margin"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/ic_add_black_24dp" />

                <TextView
                    android:id="@+id/tv_Minus"
                    android:layout_width="@dimen/activity_20dp_margin"
                    android:layout_height="@dimen/activity_20dp_margin"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_remove_black_24dp" />

                <com.binaryic.customerapp.fashionic.custom.TextViewPrimary
                    android:id="@+id/tv_Product_Count"
                    android:layout_width="@dimen/activity_20dp_margin"
                    android:layout_height="@dimen/activity_20dp_margin"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/shop_Organic_Color"
                    android:gravity="center"
                    android:maxLength="2"
                    android:minEms="3"
                    android:text="1"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>